---
import { Image } from 'astro:assets';
import logo from '../assets/images/logo.png';

const nav = [
  { href: '/', label: 'Home' },
  { href: '/beers', label: 'Beers' },
  { href: '/events', label: 'Events' },
  { href: '/food-trucks', label: 'Food Trucks' },
  { href: '/taproom', label: 'Taproom' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];
---

<a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:bg-amber focus:text-charcoal focus:px-3 focus:py-1 focus:rounded">
  Skip to content
</a>

<header class="sticky top-0 z-50 border-b border-white/10 bg-charcoal/90 backdrop-blur">
  <div class="mx-auto max-w-7xl px-4 sm:px-6">
    <div class="flex h-32 items-center justify-between relative">
      <!-- Brand (left) -->
      <a href="/" class="flex items-center gap-3">
        <Image
          src={logo}
          alt="Dreaming Creek Brewery"
          widths={[64, 96, 128]}
          sizes="(max-width: 640px) 64px, 96px"
          format="png"
          class="h-20 w-20 rounded-full"
          loading="eager"
          decoding="async"
        />
      </a>

      <!-- Center title (mobile only) -->
      <span class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 text-cream text-base font-semibold tracking-wide md:hidden">
        Dreaming Creek Brewery
      </span>

      <!-- Desktop nav -->
      <nav aria-label="Primary" class="hidden md:block">
        <ul class="flex items-center gap-6 text-sm">
          {nav.map((item) => (
            <li>
              <a href={item.href} class="text-cream/90 hover:text-amber transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- CTA (desktop only) -->
      <div class="hidden md:block">
        <a href="/events" class="inline-flex items-center rounded-md bg-amber px-3 py-2 text-sm font-medium text-charcoal hover:bg-amber/90">
          Upcoming Events
        </a>
      </div>

      <!-- Mobile menu -->
      <details class="relative md:hidden">
        <summary
          class="list-none rounded p-2 text-cream/90 hover:text-amber cursor-pointer relative z-20"
          aria-label="Open menu"
        >
          <!-- hamburger -->
          <span class="block h-0.5 w-6 bg-current mb-1"></span>
          <span class="block h-0.5 w-6 bg-current mb-1"></span>
          <span class="block h-0.5 w-6 bg-current"></span>
        </summary>

        <!-- Positioned BELOW the summary button -->
        <nav
          aria-label="Mobile"
          class="absolute right-0 top-full mt-2 z-10 w-64 rounded-lg border border-white/10 bg-charcoal/95 p-3 shadow-xl max-h-[75vh] overflow-auto"
        >
          <ul class="flex flex-col divide-y divide-white/10">
            {nav.map((item) => (
              <li>
                <a href={item.href} class="block py-3 text-cream/90 hover:text-amber">
                  {item.label}
                </a>
              </li>
            ))}
            <li class="pt-3">
              <a href="/events" class="block rounded bg-amber px-3 py-2 text-center font-medium text-charcoal hover:bg-amber/90">
                Upcoming Events
              </a>
            </li>
          </ul>
        </nav>
      </details>
    </div>
  </div>
</header>
